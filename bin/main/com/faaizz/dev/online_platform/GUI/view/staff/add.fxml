<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>

<?import javafx.collections.*?>

<?import java.lang.String?>

<BorderPane fx:id="root_border_pane" stylesheets="@../css/base.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.faaizz.dev.online_platform.GUI.controller.staff.AddStaffController">

    <top>

    </top>


    <left>
        <VBox fx:id="sub_section_pane" spacing="20" prefWidth="230" minWidth="230">
            <VBox spacing="10" styleClass="sub-section-style">
                <Label text="Hello," alignment="CENTER_LEFT" styleClass="mid-body-font" />
                <Label fx:id="staff_name" text="" alignment="CENTER_LEFT" styleClass="big-body-font" />
                <padding>
                    <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
                </padding>
            </VBox>

            <!--STAFF BUTTONS-->
            <VBox fx:id="staff_sub_section" spacing="10"  styleClass="sub-section-style">
                <Button fx:id="edit_button" text="Edit Details" alignment="CENTER" styleClass="mid-body-font, sub-section-buttons" minHeight="35" prefHeight="35" prefWidth="Infinity" onAction="#handleRedirectToEditDetails" />
                <Button fx:id="add_button" text="Add Account" alignment="CENTER" styleClass="mid-body-font, active-sub-section-button" minHeight="35" prefHeight="35" prefWidth="Infinity" onAction="#handleRedirectToAddAccounts" />
                <Button fx:id="manage_button" text="Manage Accounts" alignment="CENTER" styleClass="mid-body-font, sub-section-buttons" minHeight="35" prefHeight="35" prefWidth="Infinity" onAction="#handleRedirectToManageAccounts" />
                <padding>
                    <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
                </padding>
            </VBox>

            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="0" />
            </padding>
        </VBox>
    </left>

    <center>
        <VBox fx:id="center_vbox" >
            <HBox styleClass="sub-section-style"  maxWidth="100000000000000" alignment="CENTER">
                <Label text="ADD STAFF ACCOUNT" styleClass="big-body-font" maxWidth="100000000000" />
                <padding>
                    <Insets bottom="5" left="5" right="5" top="5" />
                </padding>
            </HBox>

            <ScrollPane fx:id="content_scrollpane" styleClass="scroll-pane" fitToWidth="true" fitToHeight="true">
                <content>
                    <HBox  styleClass="sub-section-style" spacing="30" alignment="CENTER">
                        <!--LABELS-->
                        <VBox fx:id="labels_vbox" spacing="10" alignment="TOP_RIGHT">
                            <Label text="First Name:" styleClass="mid-body-font" alignment="CENTER_RIGHT" minHeight="30" prefHeight="30"/>
                            <Label text="Last Name:" styleClass="mid-body-font" alignment="CENTER_RIGHT" minHeight="30" prefHeight="30"/>
                            <Label text="Email:" styleClass="mid-body-font" alignment="CENTER_RIGHT" minHeight="30" prefHeight="30"/>
                            <Label text="Address:" styleClass="mid-body-font" alignment="CENTER_RIGHT" minHeight="70" prefHeight="70"/>
                            <Label text="Gender:" styleClass="mid-body-font" alignment="CENTER_RIGHT" minHeight="30" prefHeight="30"/>
                            <Label text="Is admin?" styleClass="mid-body-font" alignment="CENTER_RIGHT" minHeight="30" prefHeight="30"/>
                            <Label text="Phone Number:" styleClass="mid-body-font" alignment="CENTER_RIGHT" minHeight="30" prefHeight="30"/>
                            <Label text="Alternate Phone Number:" styleClass="mid-body-font" alignment="CENTER_RIGHT" minHeight="30" prefHeight="30"/>
                            <Label text="Password:" styleClass="mid-body-font" alignment="CENTER_RIGHT" minHeight="30" prefHeight="30" />
                            <Label text="Confirm Password:" styleClass="mid-body-font" alignment="CENTER_RIGHT" minHeight="30" prefHeight="30" />
                        </VBox>

                        <!--TEXTFIELDS-->
                        <VBox fx:id="textfields_vbox"  spacing="10">
                            <TextField fx:id="first_name_textfield"  styleClass="big-body-textfield" minHeight="30" prefHeight="30"/>
                            <TextField fx:id="last_name_textfield"  styleClass="big-body-textfield" minHeight="30" prefHeight="30"/>
                            <TextField fx:id="email_textfield"  styleClass="big-body-textfield" minHeight="30" prefHeight="30"/>
                            <TextArea fx:id="address_text_area" styleClass="big-body-textarea" minHeight="70" prefHeight="70" />
                            <ComboBox fx:id="gender_dropdown" styleClass="big-body-combobox" >
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value= "male" />
                                        <String fx:value= "female" />
                                    </FXCollections>
                                </items>
                            </ComboBox>
                            <ComboBox fx:id="admin_dropdown" styleClass="big-body-combobox" >
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value= "true" />
                                        <String fx:value= "false" />
                                    </FXCollections>
                                </items>
                            </ComboBox>
                            <TextField fx:id="phone_number_textfield"  styleClass="big-body-textfield" minHeight="30" prefHeight="30"/>
                            <TextField fx:id="alt_phone_number_textfield" styleClass="big-body-textfield" minHeight="30" prefHeight="30"/>
                            <PasswordField fx:id="password_textfield" styleClass="big-body-textfield" minHeight="30" prefHeight="30"/>
                            <PasswordField fx:id="confirm_password_textfield" styleClass="big-body-textfield" minHeight="30" prefHeight="30"/>
                            <Button fx:id="add_staff_button" text="CONFIRM" alignment="CENTER" styleClass="mid-body-font, dark-color-style, dark-color-button" minHeight="35" prefHeight="35" onAction="#handleConfirm" />
                        </VBox>
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                    </HBox>
                </content>
            </ScrollPane>

            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="0" />
            </padding>


            <VBox fx:id="pagination_vbox" />
            
        </VBox>
    </center>

</BorderPane>

